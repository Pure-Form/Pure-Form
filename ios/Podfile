require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] = podfile_properties['newArchEnabled'] == 'true' ? '1' : '0'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] = podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']

use_autolinking_method_symbol = ('use' + '_native' + '_modules!').to_sym
origin_autolinking_method = self.method(use_autolinking_method_symbol)
self.define_singleton_method(use_autolinking_method_symbol) do |*args|
  if ENV['EXPO_UNSTABLE_CORE_AUTOLINKING'] == '1'
    Pod::UI.puts('Using expo-modules-autolinking as core autolinking source'.green)
    config_command = [
      'node',
      '--no-warnings',
      '--eval',
      'require(require.resolve(\'expo-modules-autolinking\', { paths: [require.resolve(\'expo/package.json\')] }))(process.argv.slice(1))',
      'react-native-config',
      '--json',
      '--platform',
      'ios'
    ]
    origin_autolinking_method.call(config_command)
  else
    origin_autolinking_method.call()
  end
end

platform :ios, podfile_properties['ios.deploymentTarget'] || '13.4'
install! 'cocoapods',
  :deterministic_uuids => false

prepare_react_native_project!

target 'PureLife' do
  use_expo_modules!
  config = use_native_modules!

  use_frameworks! :linkage => podfile_properties['ios.useFrameworks'].to_sym if podfile_properties['ios.useFrameworks']
  use_frameworks! :linkage => ENV['USE_FRAMEWORKS'].to_sym if ENV['USE_FRAMEWORKS']

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['expo.jsEngine'] == nil || podfile_properties['expo.jsEngine'] == 'hermes',
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :privacy_file_aggregation_enabled => podfile_properties['apple.privacyManifestAggregationEnabled'] != 'false',
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => podfile_properties['apple.ccacheEnabled'] == 'true',
    )

    # This is necessary for Xcode 14, because it signs resource bundles by default
    # when building for devices.
    installer.target_installation_results.pod_target_installation_results
      .each do |pod_name, target_installation_result|
      target_installation_result.resource_bundle_targets.each do |resource_bundle_target|
        resource_bundle_target.build_configurations.each do |config|
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
      end
    end

    # Remove duplicate -lc++ library flags and fix deployment target
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        if config.build_settings['OTHER_LDFLAGS']
          flags = config.build_settings['OTHER_LDFLAGS']
          if flags.is_a?(Array)
            config.build_settings['OTHER_LDFLAGS'] = flags.uniq
          elsif flags.is_a?(String)
            config.build_settings['OTHER_LDFLAGS'] = flags.split.uniq.join(' ')
          end
        end
        # Fix deployment target to minimum supported version (13.4) - force all pods
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.4'
        # Suppress documentation warnings from frameworks
        config.build_settings['WARNING_CFLAGS'] ||= '$(inherited)'
        config.build_settings['WARNING_CFLAGS'] = "#{config.build_settings['WARNING_CFLAGS']} -Wno-documentation"
        # Suppress script phase notes
        config.build_settings['CLANG_WARN_DOCUMENTATION_COMMENTS'] = 'NO'
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
        
        # Suppress Swift deprecation warnings for ExpoCrypto (uses legacy CommonCrypto)
        if target.name == 'ExpoCrypto'
          config.build_settings['OTHER_SWIFT_FLAGS'] ||= '$(inherited)'
          config.build_settings['OTHER_SWIFT_FLAGS'] = "#{config.build_settings['OTHER_SWIFT_FLAGS']} -suppress-warnings"
        end
      end
    end

    # Update to recommended Xcode settings
    installer.pods_project.build_configurations.each do |config|
      config.build_settings['DEAD_CODE_STRIPPING'] = 'YES'
      # Suppress documentation warnings from prebuilt frameworks
      config.build_settings['WARNING_CFLAGS'] ||= ['$(inherited)', '-Wno-documentation']
      # Suppress all compiler warnings
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      config.build_settings['CLANG_WARN_DOCUMENTATION_COMMENTS'] = 'NO'
    end

    # Add explicit outputs to script phases and make them create a stamp file so
    # Xcode dependency analysis doesn't emit "will be run during every build" notes.
    # For each PBXShellScriptBuildPhase, add an output path under DerivedFiles and
    # append a short echo command to the script to touch that file.
    installer.pods_project.targets.each do |target|
      target.build_phases.each do |phase|
        if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
          safe_name = phase.name ? phase.name.gsub(/[^0-9A-Za-z_\-]/, '_') : "unnamed_phase"
          stamp_path = "${DERIVED_FILE_DIR}/pods_#{target.name}_#{safe_name}.stamp"
          # Only add the output if not already present
          phase.output_paths ||= []
          unless phase.output_paths.include?(stamp_path)
            phase.output_paths << stamp_path
          end
          # Ensure the script will create the stamp file when run.
          append_cmd = "\necho \"stamp\" > \"#{stamp_path}\" || true\n"
          unless phase.shell_script && phase.shell_script.include?(stamp_path)
            phase.shell_script = (phase.shell_script.to_s || "") + append_cmd
          end
        end
      end
    end

    # Also apply the same changes to aggregate targets / main user project targets
    if installer.respond_to?(:aggregate_targets)
      installer.aggregate_targets.each do |aggregate_target|
        if aggregate_target.user_project && aggregate_target.user_project.targets
          aggregate_target.user_project.targets.each do |target|
            target.build_phases.each do |phase|
              if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
                safe_name = phase.name ? phase.name.gsub(/[^0-9A-Za-z_\-]/, '_') : "unnamed_phase"
                stamp_path = "${DERIVED_FILE_DIR}/proj_#{target.name}_#{safe_name}.stamp"
                phase.output_paths ||= []
                unless phase.output_paths.include?(stamp_path)
                  phase.output_paths << stamp_path
                end
                append_cmd = "\necho \"stamp\" > \"#{stamp_path}\" || true\n"
                unless phase.shell_script && phase.shell_script.include?(stamp_path)
                  phase.shell_script = (phase.shell_script.to_s || "") + append_cmd
                end
              end
            end
          end
        end
      end
    end

    # Apply custom patches to Pods
    puts "Applying custom Pods patches..."
    system("bash #{File.join(__dir__, '../scripts/patch-pods.sh')} #{installer.pods_project.path.parent}")
  end

  post_integrate do |installer|
    begin
      expo_patch_react_imports!(installer)
    rescue => e
      Pod::UI.warn e
    end
  end
end
